<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:EitherAssistant.ViewModels"
        x:Class="EitherAssistant.Views.SettingsWindow"
        x:DataType="vm:SettingsWindowViewModel"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        Width="720"
        Height="780"
        MinWidth="600"
        MinHeight="500"
        Title="Settings"
        WindowStartupLocation="CenterOwner"
        CanResize="True"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome">

    <Design.DataContext>
        <vm:SettingsWindowViewModel/>
    </Design.DataContext>

    <Panel>
        
        <Panel.Background>
            <RadialGradientBrush Center="0.5,0.5" RadiusX="1.2" RadiusY="1.2">
                <GradientStop Color="#050508" Offset="0"/>
                <GradientStop Color="#0D0D15" Offset="0.4"/>
                <GradientStop Color="#1A1A2E" Offset="0.7"/>
                <GradientStop Color="#0A0A12" Offset="1"/>
            </RadialGradientBrush>
        </Panel.Background>
        
        
        <Canvas ClipToBounds="False">
            <Ellipse Width="450" Height="450" 
                     Canvas.Left="135" Canvas.Top="-180"
                     Opacity="0.2">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#6C63FF" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>

        
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            
            <Grid Grid.Row="0" Margin="0,0,0,36">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           Text="Settings &amp; Configuration"
                           FontFamily="Inter"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="#FFFFFF"
                           VerticalAlignment="Center"
                           LetterSpacing="0.5">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FFFFFF" BlurRadius="25" OffsetX="0" OffsetY="0" Opacity="0.4"/>
                    </TextBlock.Effect>
                </TextBlock>
                
                <Button Grid.Column="1"
                        Width="48" Height="48"
                        Classes="action-button-liquid"
                        Command="{Binding CloseCommand}"
                        ToolTip.Tip="Close Settings"
                        Padding="0">
                    <TextBlock Text="Ã—" FontSize="26" FontWeight="Light" Opacity="0.9" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </Grid>

            
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="0,0,12,0">
                <StackPanel Spacing="28">
                    
                    
                    <Border Classes="settings-section">
                        <StackPanel Spacing="26">
                            <TextBlock Text="General Settings"
                                       FontFamily="Inter"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#FFFFFF"
                                       LetterSpacing="0.3"/>
                            
                            
                            <StackPanel Spacing="12">
                                <TextBlock Text="Theme"
                                           FontFamily="Inter"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="#FFFFFF"
                                           Opacity="0.9"/>
                                <ComboBox Classes="settings-combo"
                                          SelectedItem="{Binding SelectedTheme}"
                                          ItemsSource="{Binding AvailableThemes}"
                                          MinWidth="240"
                                          Height="44"
                                          HorizontalAlignment="Left"
                                          VerticalContentAlignment="Center">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                                                       FontFamily="Inter"
                                                       FontSize="14"
                                                       Foreground="#FFFFFF"
                                                       Padding="4"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            
                            <StackPanel Spacing="12">
                                <TextBlock Text="Language"
                                           FontFamily="Inter"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="#FFFFFF"
                                           Opacity="0.9"/>
                                <ComboBox Classes="settings-combo"
                                          SelectedItem="{Binding SelectedLanguage}"
                                          ItemsSource="{Binding AvailableLanguages}"
                                          MinWidth="240"
                                          Height="44"
                                          HorizontalAlignment="Left"
                                          VerticalContentAlignment="Center">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                                                       FontFamily="Inter"
                                                       FontSize="14"
                                                       Foreground="#FFFFFF"
                                                       Padding="4"
                                                       TextAlignment="Center"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <CheckBox Classes="settings-checkbox"
                                          IsChecked="{Binding AutoStartEnabled}"
                                          VerticalAlignment="Center"/>
                                <TextBlock Text="Start with system"
                                           FontFamily="Inter"
                                           FontSize="15"
                                           FontWeight="Medium"
                                           Foreground="#FFFFFF"
                                           Opacity="0.9"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    
                    <Border Classes="settings-section">
                        <StackPanel Spacing="26">
                            <TextBlock Text="Voice &amp; Audio"
                                       FontFamily="Inter"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#FFFFFF"
                                       LetterSpacing="0.3"/>
                            
                            
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <CheckBox Classes="settings-checkbox"
                                          IsChecked="{Binding VoiceInputEnabled}"
                                          VerticalAlignment="Center"/>
                                <TextBlock Text="Enable voice input"
                                           FontFamily="Inter"
                                           FontSize="15"
                                           FontWeight="Medium"
                                           Foreground="#FFFFFF"
                                           Opacity="0.9"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            
                            <StackPanel Spacing="12">
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock Grid.Column="0"
                                               Text="Voice Sensitivity"
                                               FontFamily="Inter"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Foreground="#FFFFFF"
                                               Opacity="0.9"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding VoiceSensitivity, StringFormat='{}{0:F0}%'}"
                                               FontFamily="Inter"
                                               FontSize="15"
                                               Foreground="#6C63FF"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"/>
                                </Grid>
                                <Slider Classes="settings-slider"
                                        Value="{Binding VoiceSensitivity}"
                                        Minimum="0"
                                        Maximum="100"
                                        TickFrequency="5"
                                        IsSnapToTickEnabled="True"
                                        MinWidth="200"
                                        Height="28"/>
                            </StackPanel>

                            
                            <StackPanel Spacing="12">
                                <TextBlock Text="Audio Input Device"
                                           FontFamily="Inter"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="#FFFFFF"
                                           Opacity="0.9"/>
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <ComboBox Classes="settings-combo"
                                              SelectedItem="{Binding SelectedAudioDevice}"
                                              ItemsSource="{Binding AvailableAudioDevices}"
                                              MinWidth="280"
                                              Height="44">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" 
                                                           FontFamily="Inter"
                                                           FontSize="14"
                                                           Foreground="#FFFFFF"
                                                           Padding="4"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <Button Classes="settings-button"
                                            Command="{Binding RefreshAudioDevicesCommand}"
                                            Content="Refresh"
                                            Height="44"
                                            Padding="20,0"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    
                    <Border Classes="settings-section">
                        <StackPanel Spacing="26">
                            <TextBlock Text="Advanced"
                                       FontFamily="Inter"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#FFFFFF"
                                       LetterSpacing="0.3"/>
                            
                            
                            <StackPanel Spacing="12">
                                <TextBlock Text="Python Backend"
                                           FontFamily="Inter"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="#FFFFFF"
                                           Opacity="0.9"/>
                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                                    <TextBlock Grid.Column="0"
                                               Text="Status:"
                                               FontFamily="Inter"
                                               FontSize="14"
                                               Foreground="#FFFFFF"
                                               Opacity="0.7"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding PythonBackendStatus}"
                                               FontFamily="Inter"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="{Binding PythonBackendStatusColor}"
                                               VerticalAlignment="Center"/>
                                    <Button Grid.Column="2"
                                            Classes="settings-button"
                                            Command="{Binding RestartPythonBackendCommand}"
                                            Content="Restart Backend"
                                            Height="40"
                                            Padding="18,0"/>
                                </Grid>
                            </StackPanel>

                            
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <CheckBox Classes="settings-checkbox"
                                          IsChecked="{Binding DebugModeEnabled}"
                                          VerticalAlignment="Center"/>
                                <TextBlock Text="Enable debug mode"
                                           FontFamily="Inter"
                                           FontSize="15"
                                           FontWeight="Medium"
                                           Foreground="#FFFFFF"
                                           Opacity="0.9"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            
                            <StackPanel Spacing="12">
                                <TextBlock Text="Log Level"
                                           FontFamily="Inter"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="#FFFFFF"
                                           Opacity="0.9"/>
                                <ComboBox Classes="settings-combo"
                                          SelectedItem="{Binding SelectedLogLevel}"
                                          ItemsSource="{Binding AvailableLogLevels}"
                                          MinWidth="240"
                                          Height="44"
                                          HorizontalAlignment="Left">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                                                       FontFamily="Inter"
                                                       FontSize="14"
                                                       Foreground="#FFFFFF"
                                                       Padding="4"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Spacing="14"
                        Margin="0,36,0,0">
                <Button Classes="settings-button-secondary"
                        Command="{Binding ResetToDefaultsCommand}"
                        Content="Reset to Defaults"
                        Height="48"
                        Padding="28,0"/>
                <Button Classes="settings-button-primary"
                        Command="{Binding SaveSettingsCommand}"
                        Content="Save Settings"
                        Height="48"
                        Padding="32,0"/>
            </StackPanel>
        </Grid>
    </Panel>
</Window>